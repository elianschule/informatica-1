#include <stdio.h>

int main(void) {
    float peso, altura, imc;

    printf("Ingrese el peso en kg: ");
    scanf("%f", &peso);

    printf("Ingrese la altura en metros: ");
    scanf("%f", &altura);

    imc = peso / (altura * altura);

    printf("\nSu índice de masa corporal es: %.2f\n", imc);

    printf("\nÍndice (IMC)  | Condición\n");
    printf("--------------------------\n");
    printf("<18.5         | Bajo peso\n");
    printf("18.5 - 24.9   | Normal\n");
    printf("25.0 - 29.9   | Sobrepeso\n");
    printf(">=30.0        | Obesidad\n\n");

    // Mostrar condición según el valor del IMC
    if (imc < 18.5)
        printf("Condición: Bajo peso\n");
    else if (imc >= 18.5 && imc <= 24.9)
        printf("Condición: Normal\n");
    else if (imc >= 25 && imc <= 29.9)
        printf("Condición: Sobrepeso\n");
    else
        printf("Condición: Obesidad\n");

    // Esta línea es la modificación pedida
    printf("\nUsted se encuentra en la condición mostrada arriba según su IMC.\n");

    return 0;
}
